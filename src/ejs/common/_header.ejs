<% let isHome = pageId === "home" %>
<header id="js-header" class="<%= isHome ? "l-header p-header" : "l-header p-header p-header--sub" %>">
    <div class="l-container p-header__container">
        <div class="p-header__inner">
            <% if (pageId==="home" ) { %>
                <h1 class="p-header__logo c-logo">
                    <%= meta.global.title; %>
                </h1>
                <% } else { %>
                    <p class="p-header__logo c-logo">
                        <a href="<%= meta.local.home.slug; %>">
                            <%= meta.global.title; %>
                        </a>
                    </p>
                    <% } %>

                        <nav class="p-header__nav p-gnav">
                            <ul class="p-gnav__items">
                                <% for (let page in meta.local) { %>
                                    <% if (page===pageId) { %>
                                        <li class="is-current">
                                            <%= page.title %>
                                        </li>
                                        <% } else { %>
                                            <li>
                                                <a href="<%= page.slug %>">
                                                    <%= page.title %>
                                                </a>
                                            </li>
                                            <% } %>
                                                <% } %>
                            </ul>
                        </nav>
        </div>
    </div>
</header>